# ===========================================
# Firebase Configuration
# Get these from: Firebase Console > Project Settings > Your apps > Web app
# ===========================================

VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abc123

# ===========================================
# PMS (Property Management System) API
# Configure these when you have API credentials from your PMS provider
# ===========================================

VITE_PMS_API_URL=https://your-pms-api.com/api/v1
VITE_PMS_API_KEY=your-pms-api-key-here
VITE_PMS_HOTEL_ID=your-hotel-id
VITE_PMS_REFRESH_INTERVAL=60000

# ===========================================
# AI Configuration (Optional)
# ===========================================

VITE_GEMINI_API_KEY=your-gemini-api-key-here
